    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:name="io.mtini.android.tenantmanager.fragments.TenantListFragment"
        android:id="@+id/tenant_list_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <fragment android:name="io.mtini.android.tenantmanager.fragments.TenantDetailsFragment"
        android:id="@+id/tenant_details_fragment"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>